#include <iostream>
using namespace std;
int sumOfDigits(int n)
{
    if (n == 0)
    {
        return 0;
    }
    else
    {
        return (n % 10) + sumOfDigits(n / 10);
    }
}
int main()
{
    int num;
    cout << "Enter the number:" << endl;
    cin >> num;
    cout << "The sum of digits of:" << num << "is:" << sumOfDigits(num) << endl;
    return 0;
}
